<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:hibernatesearch="http://www.snowdrop.me/schema/data/hibernatesearch"
       xsi:schemaLocation="http://www.snowdrop.me/schema/data/hibernatesearch http://www.snowdrop.me/schema/data/hibernatesearch/spring-hibernatesearch-1.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <bean name="datasourceMapper"
        class="me.snowdrop.data.hibernatesearch.TestUtils"
        factory-method="createDatasourceMapper"
  >
    <constructor-arg value="me.snowdrop.data.hibernatesearch.smoke.SmokeEntity"/>
  </bean>

  <hibernatesearch:repositories base-package="me.snowdrop.data.hibernatesearch.smoke"/>

</beans>